<AppBox>:
  BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
      orientation: 'vertical'      
      Slider:
        id: slider_1
        name: 'slider_1'
        orientation: "vertical"
        min: 0
        max: 100
        value: 0
        value_track: True
        value_track_color: 1,0,0,1
        on_value: root.on_value(str(self.name), int(self.value))
        size_hint_y: 0.6
      Label:
        id: label_1
        name: 'label_1'
        size_hint_y: 0.2
        text: '0%'
      Label:
        size_hint_y: 0.2
        text: '10kv'

